<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	     xmlns:xsi="http://www.w3.org/2001/Schema-instance"
	     xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.pearson.ed</groupId>
		<artifactId>rumba-ws-parent</artifactId>
		<version>3.0.9-SNAPSHOT</version>
	</parent>

	<groupId>com.pearson.ed.lplc</groupId>
	<artifactId>LicensePoolLifeCycle</artifactId>
	<packaging>war</packaging>

	<name>LicensePoolLifeCycle</name>

	<properties>
		<skip.tomcat.deploy>false</skip.tomcat.deploy>
		<short.name>lplc</short.name>
	</properties>
	
	<profiles>
		<profile>
			<!--
			To disable: mvn -P!local ...
			-->
			<id>local</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<env>local</env>
				<hibernate.connection.url>${local.hibernate.connection.url}</hibernate.connection.url>
				<tomcat.host.url>${local.tomcat.host.url}</tomcat.host.url>
				<tomcat.manager.username>${local.tomcat.manager.username}</tomcat.manager.username>
				<tomcat.manager.password>${local.tomcat.manager.password}</tomcat.manager.password>
			</properties>
		</profile>
		<profile>
			<!--
			To enable (without local): mvn -Pdev ...
			-->
			<id>dev</id>
			<properties>
				<env>dev</env>
				<hibernate.connection.url>${dev.hibernate.connection.url}</hibernate.connection.url>
				<tomcat.host.url>${dev.tomcat.host.url}</tomcat.host.url>
				<tomcat.manager.username>${dev.tomcat.manager.username}</tomcat.manager.username>
				<tomcat.manager.password>${dev.tomcat.manager.password}</tomcat.manager.password>
			</properties>
		</profile>
		<profile>
			<!--
			To enable (without local): mvn -Ptest ...
			-->
			<id>test</id>
			<properties>
				<env>test</env>
				<hibernate.connection.url>${test.hibernate.connection.url}</hibernate.connection.url>
				<tomcat.host.url>${test.tomcat.host.url}</tomcat.host.url>
				<tomcat.manager.username>${test.tomcat.manager.username}</tomcat.manager.username>
				<tomcat.manager.password>${test.tomcat.manager.password}</tomcat.manager.password>
			</properties>
		</profile>
	</profiles>

	<dependencies>
		<dependency>
			<groupId>sonic</groupId>
			<artifactId>sonic-client</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-httpclient</groupId>
			<artifactId>commons-httpclient</artifactId>
		</dependency>
		<dependency>
			<groupId>org.codehaus.castor</groupId>
			<artifactId>castor</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context-support</artifactId>
		</dependency>
		<dependency>
			<groupId>quartz</groupId>
			<artifactId>quartz</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.ws.commons.schema</groupId>
			<artifactId>XmlSchema</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.ws.commons.axiom</groupId>
			<artifactId>axiom-api</artifactId>
			<version>1.2.8</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.ws.commons.axiom</groupId>
			<artifactId>axiom-impl</artifactId>
			<version>1.2.8</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>

	<build>
		<finalName>LicensePoolLifeCycle</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>properties-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>eviware</groupId>
				<artifactId>maven-soapui-pro-plugin</artifactId>
				<version>3.5</version>
				<configuration>
					<projectFile>../../commons/testsuite/US based Test Suites/LicensePoolLifeCycle.xml</projectFile>
					<printReport>true</printReport>
					<junitReport>true</junitReport>
					<outputFolder>../../lplc-dev-regression/soapui_testreports</outputFolder>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>rumba.release</id>
			<name>RUMBA Release Repository</name>
			<url>http://rumba.ci.dev.pearsoncmg.com/nexus/content/repositories/internal/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
		<repository>
			<id>rumba.snapshots</id>
			<name>RUMBA Snapshots Repository</name>
			<url>http://rumba.ci.dev.pearsoncmg.com/nexus/content/repositories/snapshots/</url>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
	</repositories>
</project>
