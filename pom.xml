
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/Schema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.pearson.ed</groupId>
		<artifactId>rumba-ws-parent</artifactId>
		<version>3.0.6-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>

	<groupId>com.pearson.ed.lplc</groupId>
	<artifactId>LicensePoolLifeCycle</artifactId>
	<packaging>war</packaging>
	<version>3.0.6-SNAPSHOT</version>
	<name>LicensePoolLifeCycle</name>

	<properties>
		<short.name>lplc</short.name>
	</properties>

	<profiles>
		<profile>
			<!--
			To disable: mvn -P!local ...
			-->
			<id>local</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<tomcat.host.port>${local.tomcat.host.port}</tomcat.host.port>
				<tomcat.manager.username>${local.tomcat.manager.username}</tomcat.manager.username>
				<tomcat.manager.password>${local.tomcat.manager.password}</tomcat.manager.password>
				<jdbc.connection.url>${local.jdbc.connection.url}</jdbc.connection.url>
				<db.schema.createOrUpdate.skip>true</db.schema.createOrUpdate.skip>
				<jdbc.connection.username>LICENSEPOOL_DEV</jdbc.connection.username>
				<jdbc.connection.password>license</jdbc.connection.password>
				<jdbc.connection.app.username>LICENSEPOOL_DEV_SERVICES</jdbc.connection.app.username>
				<jdbc.connection.app.password>license</jdbc.connection.app.password>
				<jdbc.default.schema>LICENSEPOOL_DEV</jdbc.default.schema>
				<user>${jdbc.connection.app.username}</user>
				<organization.service.endpoint>http://localhost:8080/OrganizationLifeCycle/services/2009/07/01</organization.service.endpoint>
				<jms.server.url>tcp://sonicdc05:2507</jms.server.url>
				<jms.queue>queue.pearson.ed.rumba.request.licensepool.xml</jms.queue>
				<jms.topic>topic.pearson.ed.rumba.request.organization.xml</jms.topic>
			</properties>
		</profile>
		<profile>
			<!--
			To enable (without local): mvn -Pdev ...
			-->
			<id>dev</id>
			<properties>
				<tomcat.host.port>${dev.tomcat.host.port}</tomcat.host.port>
				<tomcat.manager.username>${dev.tomcat.manager.username}</tomcat.manager.username>
				<tomcat.manager.password>${dev.tomcat.manager.password}</tomcat.manager.password>
				<jdbc.connection.url>${dev.jdbc.connection.url}</jdbc.connection.url>
				<db.schema.createOrUpdate.skip>true</db.schema.createOrUpdate.skip>
				<jdbc.connection.username>LICENSEPOOL_DEV</jdbc.connection.username>
				<jdbc.connection.password>license</jdbc.connection.password>
				<jdbc.connection.app.username>LICENSEPOOL_DEV_SERVICES</jdbc.connection.app.username>
				<jdbc.connection.app.password>license</jdbc.connection.app.password>
				<jdbc.default.schema>LICENSEPOOL_DEV</jdbc.default.schema>
				<user>${jdbc.connection.app.username}</user>
				<organization.service.endpoint>http://localhost:8080/OrganizationLifeCycle/services/2009/07/01</organization.service.endpoint>
				<jms.server.url>tcp://sonicdc05:2507</jms.server.url>
				<jms.queue>queue.pearson.ed.rumba.request.licensepool.xml</jms.queue>
				<jms.topic>topic.pearson.ed.rumba.request.organization.xml</jms.topic>
			</properties>
		</profile>
		<profile>
			<!--
			To enable (without local): mvn -Ptest ...
			-->
			<id>test</id>
			<properties>
				<tomcat.host.port>${test.tomcat.host.port}</tomcat.host.port>
				<tomcat.manager.username>${test.tomcat.manager.username}</tomcat.manager.username>
				<tomcat.manager.password>${test.tomcat.manager.password}</tomcat.manager.password>
				<jdbc.connection.url>${test.jdbc.connection.url}</jdbc.connection.url>
				<db.schema.createOrUpdate.skip>true</db.schema.createOrUpdate.skip>
				<jdbc.connection.username>LICENSEPOOL_TEST</jdbc.connection.username>
				<jdbc.connection.password>license</jdbc.connection.password>
				<jdbc.connection.app.username>LICENSEPOOL_TEST_SERVICES</jdbc.connection.app.username>
				<jdbc.connection.app.password>license</jdbc.connection.app.password>
				<jdbc.default.schema>LICENSEPOOL_TEST</jdbc.default.schema>
				<user>${jdbc.connection.app.username}</user>
				<organization.service.endpoint>http://rumba.test.pearsoncmg.com/OrganizationLifeCycle/services/2009/07/01</organization.service.endpoint>
				<jms.server.url>tcp://sonicdc05:2517</jms.server.url>
				<jms.queue>queue.pearson.ed.rumba.request.licensepool.xml</jms.queue>
				<jms.topic>topic.pearson.ed.rumba.request.organization.xml</jms.topic>
			</properties>
		</profile>
	</profiles>
	
	<dependencies>
		<dependency>
			<groupId>sonic</groupId>
			<artifactId>sonic-client</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-httpclient</groupId>
			<artifactId>commons-httpclient</artifactId>
		</dependency>
		<dependency>
			<groupId>org.codehaus.castor</groupId>
			<artifactId>castor</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context-support</artifactId>
		</dependency>
		<dependency>
			<groupId>quartz</groupId>
			<artifactId>quartz</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.ws.commons.schema</groupId>
			<artifactId>XmlSchema</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.ws.commons.axiom</groupId>
			<artifactId>axiom-api</artifactId>
			<version>1.2.8</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.ws.commons.axiom</groupId>
			<artifactId>axiom-impl</artifactId>
			<version>1.2.8</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>

	<build>
		<finalName>LicensePoolLifeCycle</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-spring-application-context</id>
						<phase>process-resources</phase>
						<configuration>
							<target>
								<copy todir="${project.build.directory}/classes"
									failonerror="false" overwrite="true">
									<fileset dir="${project.build.directory}/contract/licensepool"/>
									<fileset dir="${project.build.directory}/contract/common">
										<include name="Service.xsd"/>
									</fileset>
									<fileset dir="${project.build.directory}/contract/organization">
										<include name="Organization_2009_07_01.xsd"/>
									</fileset>
								</copy>
								<copy todir="${project.build.directory}/LicensePoolLifeCycle"
									failonerror="false" overwrite="true">
									<fileset dir="${project.build.directory}/contract/licensepool"/>
									<fileset dir="${project.build.directory}/contract/common">
										<include name="Service.xsd"/>
									</fileset>
									<fileset dir="${project.build.directory}/contract/organization">
										<include name="Organization_2009_07_01.xsd"/>
									</fileset>
								</copy>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<generatePackage>com.pearson.ed.lplc.ws.schema</generatePackage>
					<schemaDirectory>${project.build.directory}/contract</schemaDirectory>
					<catalog>${project.build.directory}/contract/jaxbcatalog.cat</catalog>
					<schemaIncludes>
						<include>licensepool/*.xsd</include>
						<include>organization/Organization_2009_07_01.xsd</include>
					</schemaIncludes>
					<strict>true</strict>
				</configuration>
			</plugin>
			<plugin>
				<groupId>eviware</groupId>
				<artifactId>maven-soapui-pro-plugin</artifactId>
				<version>3.5</version>
				<configuration>
					<projectFile>../../commons/testsuite/US based Test Suites/LicensePoolLifeCycle.xml</projectFile>
					<printReport>true</printReport>
					<junitReport>true</junitReport>
					<outputFolder>../../lplc-dev-regression/soapui_testreports</outputFolder>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>rumba.release</id>
			<name>RUMBA Release Repository</name>
			<url>http://localhost:9800/nexus/content/repositories/internal/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
		<repository>
			<id>rumba.snapshots</id>
			<name>RUMBA Snapshots Repository</name>
			<url>http://localhost:9800/nexus/content/repositories/snapshots/</url>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
	</repositories>
</project>
