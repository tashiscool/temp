<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.pearson.ed.ltg.rumba</groupId>
		<artifactId>webservices</artifactId>
        <version>3.0.12-SNAPSHOT</version>
	</parent>
	
	<groupId>com.pearson.ed.ltg.rumba.webservices</groupId>
	<artifactId>LicensePoolLifeCycle</artifactId>
	<version>3.0.12-SNAPSHOT</version>
	<packaging>war</packaging>

	<name>LicensePoolLifeCycle</name>

	<properties>
		<short.name>lplc</short.name>
	</properties>
	
	<profiles>
		<profile>
			<!--
			To disable: mvn -P!local ...
			-->
			<id>local</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<env>local</env>
				<hibernate.connection.url>${local.hibernate.connection.url}</hibernate.connection.url>
				<tomcat.host>${local.tomcat.host}</tomcat.host>
				<tomcat.username>${local.tomcat.username}</tomcat.username>
				<tomcat.password>${local.tomcat.password}</tomcat.password>
			</properties>
		</profile>
		<profile>
			<!--
			To enable (without local): mvn -Pdev ...
			-->
			<id>dev</id>
			<properties>
				<env>dev</env>
				<hibernate.connection.url>${dev.hibernate.connection.url}</hibernate.connection.url>
				<tomcat.host>${dev.tomcat.host}</tomcat.host>
				<tomcat.username>${dev.tomcat.username}</tomcat.username>
				<tomcat.password>${dev.tomcat.password}</tomcat.password>
			</properties>
		</profile>
		<profile>
			<!--
			To enable (without local): mvn -Ptest ...
			-->
			<id>test</id>
			<properties>
				<env>test</env>
				<hibernate.connection.url>${test.hibernate.connection.url}</hibernate.connection.url>
				<tomcat.host>${test.tomcat.host}</tomcat.host>
				<tomcat.username>${test.tomcat.username}</tomcat.username>
				<tomcat.password>${test.tomcat.password}</tomcat.password>
			</properties>
		</profile>
		<profile>
			<!--
			To enable (without local): mvn -Pint ...
			-->
			<id>int</id>
			<properties>
				<env>int</env>
				<hibernate.connection.url>${int.hibernate.connection.url}</hibernate.connection.url>
			</properties>
		</profile>
		<profile>
			<!--
			To enable (without local): mvn -Pppe ...
			-->
			<id>ppe</id>
			<properties>
				<env>ppe</env>
				<hibernate.connection.url>${ppe.hibernate.connection.url}</hibernate.connection.url>
			</properties>
		</profile>
		<profile>
			<!--
			To enable (without local): mvn -Pprod ...
			-->
			<id>prod</id>
			<properties>
				<env>prod</env>
				<hibernate.connection.url>${prod.hibernate.connection.url}</hibernate.connection.url>
			</properties>
		</profile>
	</profiles>

	<dependencies>
		<dependency>
			<groupId>sonic</groupId>
			<artifactId>sonic-client</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-httpclient</groupId>
			<artifactId>commons-httpclient</artifactId>
		</dependency>
		<dependency>
			<groupId>org.codehaus.castor</groupId>
			<artifactId>castor</artifactId>
		</dependency>
		<dependency>
			<groupId>quartz</groupId>
			<artifactId>quartz</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.ws.commons.schema</groupId>
			<artifactId>XmlSchema</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.ws.commons.axiom</groupId>
			<artifactId>axiom-api</artifactId>
			<version>${axiom.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.ws.commons.axiom</groupId>
			<artifactId>axiom-impl</artifactId>
			<version>${axiom.version}</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>

	<build>
		<finalName>LicensePoolLifeCycle</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>${dependency.plugin.version}</version>
				<executions>
					<execution>
						<id>extract-contracts</id>
						<goals><goal>unpack-dependencies</goal></goals>
						<phase>generate-resources</phase>
						<configuration>
							<includeGroupIds>com.pearson.ed.contract</includeGroupIds>
							<includeArtifactIds>rumba-contracts</includeArtifactIds>
							<includes>licensepool/*,common/*</includes>
							<outputDirectory>${project.build.directory}/contract</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>properties-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
</project>
