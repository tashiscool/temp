<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="warn" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %5p [%t] (%c{1}:%L) %x - %m%n" />
		</layout>
	</appender>
	
	<appender name="debuglog" class="org.apache.log4j.FileAppender">
		<param name="File" value="rumbalogs/ulc-test-server.log"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %5p [%t] (%c{1}:%L) %x - %m%n" />
		</layout>
	</appender>
	
	<!-- Add all additional appenders to the async appender, not the root logger -->
		<appender name="async" class="org.apache.log4j.AsyncAppender">
		<param name="BufferSize" value="1000"/>
		<param name="Blocking" value="true"/>
		<appender-ref ref="debuglog"/>
		<appender-ref ref="console"/>
	</appender>

	<logger name="com.pearson.ed">
        <level value="debug"/>
    </logger>
    
    <!-- comment out if you want to check tracing, otherwise this floods the logs -->
    <logger name="com.pearson.ed.commons.aspects.tracing">
    	<level value="WARN"/>
    </logger>
    
	<root>
		<priority value="warn"></priority>
		<appender-ref ref="async"/>
	</root>

</log4j:configuration>
