<?xml version="1.0" encoding="UTF-8"?>
<!--
	Application context definition for the Aspect LPLC.
-->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-2.5.xsd">
	<!-- ========================= RESOURCE DEFINITIONS ========================= -->

	<bean id="businessRulesValidation"
		class="com.pearson.ed.lplc.aspect.BusinessRulesValidation"
		factory-method="aspectOf">
		<property name="validators">
			<list>
				<ref bean="licensepoolValidator" />
			</list>
		</property>
	</bean>

	<bean id="licensepoolValidator"
		class="com.pearson.ed.lplc.model.validation.LicensePoolValidator" />

	
	<!-- ========================= BUSINESS OBJECT DEFINITIONS ========================= -->
</beans>
